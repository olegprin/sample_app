<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>

      </h1>
      <h1>  <%= link_to 'Edit', edit_user_path(@user) %>     </h1>
    </section>
  </aside>
  <div class="span8">
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @user.microposts %>
      </ol>
     


     
    <% end %>
  </div>
</div>
