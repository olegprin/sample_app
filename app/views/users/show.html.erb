<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>

      </h1>

      <section>
      <%= render 'shared/stats' %>
    </section>
        <section>  <%= link_to 'Edit', edit_user_path(@user) %>     </section>
    </section>
  </aside>
  <div class="span8">
    <%= render 'follow_form' if signed_in? %>
    
  <div class="span8">
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @user.microposts %>
      </ol>
     


     
    <% end %>


    <h2>Add a comment:</h2>
<%#= form_for([@microposts, @microposts.comment.build]) do |f| %>
  <p>
    <%#= f.label :commenter %><br>
    <%#= f.text_field :commenter %>
  </p>
  <p>
    <%#= f.label :body %><br>
    <%#= f.text_area :body %>
  </p>
  <p>
    <%#= f.submit %>
  </p>

 
<%= link_to 'Back', microposts_path %> |
 </div>
  </div>
</div>
